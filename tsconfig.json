{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJs",
        "moduleResolution": "Node",
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "types": ["node"]
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}